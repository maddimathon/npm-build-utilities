{
    "markdown.extension.toc.updateOnSave": false,
    
    "files.readonlyInclude": {
        ".snapshots/**/*": true,
        "@releases/**/*": true,
        "dist/**/*": true,
        "docs/**/*": true,
    },
    "scss.scannerExclude": [
        "**/.git",
        "**/node_modules",
        "**/bower_components",
        ".snapshots",
        "@releases",
        "dist",
        "docs",
    ],
    
    "todo.embedded.exclude": [
        "**/._*",
        "**/._*/**",
        "**/node_modules/*",
        "node_modules/**",
        "@releases/**",
        ".snapshots/**",
        ".vscode/**",
        "dist/**",
        "docs/**",
        "public/**",
    ],
}